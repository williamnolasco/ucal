@import url(icons-ucal.css)

@font-face
	font-family 'HelveticaNeueLight'
	src url(../fonts/HelveticaNeue/HelveticaNeueLight.otf)
@font-face
	font-family 'HelveticaNeueBold'
	src url(../fonts/HelveticaNeue/HelveticaNeueBold.otf)
	
lead_text = #2e2e33
green = #0fb49f
white = #fff
blue = #6772e5
dark_green = #24b47e
purple = #ff45e0
lead_background = #f6f9fc

*
	margin 0
	padding 0
	box-sizing border-box
	
styles_container(background)
	display -webkit-flex
	display flex 
	flex-flow column wrap 
	justify-content center
	align-items center
	width 90%
	height auto
	background-color background
column_align_items(align-items)
	display -webkit-flex
	display flex
	flex-flow column wrap
	justify-content center
	align-items align-items


html
	font-size 15px
body
	font-family 'HelveticaNeueLight'
	color lead_text
.header-movil
	.nav-movil
		ul
			li 
				&:nth-of-type(2)
					a, span
						color green
.situation-image
	background-image url(../img/situacion.png)
.solution-image
	background-image url(../img/tres.jpg)
.projects-container
	column_align_items(center)
	width 100%
	height auto
	background-color white
	padding 30px 0
	position relative
	left 0
	top 0
	.profile
		styles_container(lead_background)
		padding 40px 20px
		margin-bottom 40px
		.date-person, .description, .social-networks
			width 100%
			height auto
		.date-person
			display -webkit-flex
			display flex 
			flex-flow row nowrap
			justify-content space-between
			align-items center
			.image-profile
				width 80px
				height 80px
				background-image url(../img/foto-perfil.png)
				background-size cover
				background-position center
			.right 
				width 60%
				column_align_items(flex-start)
				margin-left 20px
				p 
					text-align left
					font-size 1.3rem
					&:nth-of-type(1)
						font-size 1.7rem
						font-family 'HelveticaNeueBold'
						font-weight bolder
					&:nth-of-type(2)
						color purple
						margin 5px 0
					&:nth-of-type(3), &:nth-of-type(4)
						color #aeaeae
		.description
			column_align_items(flex-start)
			margin 20px 0
			span 
				font-size 3rem
				&:nth-of-type(1)
					-webkit-transform rotate(180deg)
					transform rotate(180deg)
			p 
				font-size 1.3rem
				margin 10px 0
		.social-networks
			display -webkit-flex
			display flex 
			flex-flow row nowrap
			justify-content space-around
			align-items center
			span
				column_align_items(center)
				width 50px
				height 50px
				background-color #787878
				color white
				border-radius 0.5rem
				font-size 1.7rem
				padding 10px
				cursor pointer
	.project-description
		styles_container(white)
		column_align_items(flex-start)
		padding 40px 0
		.title
			column_align_items(flex-start)
			p 
				&:nth-of-type(1)
					font-family 'HelveticaNeueBold'
					font-size 1.8rem
					font-weight bolder
				&:nth-of-type(2)
					margin-top 10px
					font-size 1.3rem
		.feature
			column_align_items(flex-start)
			margin-top 60px
			.image-feature
				width 100%
				height 300px
				background-size cover
				background-position center
			p 
				&:nth-of-type(1)
					color green
					font-family 'HelveticaNeueBold'
					font-weight bolder
					font-size 2rem
					margin-top 30px
					margin-bottom 15px
				&:nth-of-type(2)
					font-size 1.3rem
					
@media screen and (min-width: 600px)
	.projects-container
		.profile
			padding 40px
			.date-person
				.image-profile
					width 120px
					height 120px
				.right 
					width auto
@media screen and (min-width: 900px)
	html
		font-size 14px
	.header-desktop
		.right 
			.nav-desktop
				ul 
					li
						&:nth-of-type(2)
							a 
								font-family 'HelveticaNeueBold'
								color green
								border-bottom 3px solid green
	.projects-container
		flex-flow row wrap
		align-items flex-start
		width 90%
		margin 0 auto
		.profile
			.date-person
				flex-flow column wrap
				justify-content center
				align-items flex-start
				.image-profile
					width 180px
					height 180px
					margin-bottom 30px
				.right 
					margin 0
		.project-description
			margin-left 50px
			padding 0
			padding-bottom 60px
			.feature 
				.image-feature
					height 500px
@media screen and (min-width: 900px)
	.projects-container
		.profile 
			width 35%
		.project-description
			width calc(65% - 50px)
@media screen and (min-width: 1180px)
	.projects-container
		.profile 
			width 25%
		.project-description
			width calc(75% - 50px)
	

				
				
				
