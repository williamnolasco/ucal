@import url(icons-ucal.css)

@font-face
	font-family 'HelveticaNeueLight'
	src url(../fonts/HelveticaNeue/HelveticaNeueLight.otf)
@font-face
	font-family 'HelveticaNeueBold'
	src url(../fonts/HelveticaNeue/HelveticaNeueBold.otf)
	
lead_text = #2e2e33
green = #0fb49f
white = #fff
blue = #6772e5
dark_green = #24b47e
purple = #8e2289
lead_background = #f6f9fc
lead_edge = #e0e0e0

*
	margin 0
	padding 0
	box-sizing border-box
	
html
	font-size 15px
body
	font-family 'HelveticaNeueLight'
	color lead_text
.header-movil
	.nav-movil
		ul
			li 
				&:nth-of-type(3)
					a, span
						color green
.crealab-container
	display -webkit-flex
	display flex
	flex-flow column wrap
	justify-content center
	align-items center
	width 100%
	height auto
	background-color white
	padding-top 20px
	padding-bottom 40px
	.us-container
		display -webkit-flex
		display flex 
		flex-flow column wrap
		justify-content center
		align-items center
		width 90%
		.us-content
			display -webkit-flex
			display flex 
			flex-flow column wrap
			justify-content center
			align-items center
			video
				width 100%
				height 300px
				margin-bottom 50px
			.image-crealab
				width 150px
				height 50px
				background-image url(../img/crealab.png)
				background-size contain
				background-position center
				background-repeat no-repeat
			.description
				width 100%
				margin 40px 0
				p 
					font-size 1.4rem
	.allied-companies
		display -webkit-flex
		display flex 
		flex-flow column wrap
		justify-content center
		align-items flex-start
		width 90%
		p 
			font-size 2rem
			color purple
			text-align left
			font-family 'HelveticaNeueBold'
			font-weight bolder
			margin-bottom 30px
		.business-listing
			display -webkit-flex
			display flex 
			flex-flow row wrap
			justify-content center
			align-items center
			width 100%
			border-top 1px solid lead_edge
			border-left 1px solid lead_edge
			border-right 1px solid lead_edge
			.col 
				&:nth-of-type(1)
					.company-image
						background-image url(../img/2.png)
				&:nth-of-type(2)
					.company-image
						background-image url(../img/3.png)
				&:nth-of-type(3)
					.company-image
						background-image url(../img/4.png)
				&:nth-of-type(4)
					.company-image
						background-image url(../img/5.png)
				&:nth-of-type(5)
					.company-image
						background-image url(../img/6.png)
				&:nth-of-type(6)
					.company-image
						background-image url(../img/7.png)
				&:nth-of-type(7)
					.company-image
						background-image url(../img/8.png)
				&:nth-of-type(8)
					.company-image
						background-image url(../img/9.png)
				&:nth-of-type(9)
					.company-image
						background-image url(../img/10.png)
				&:nth-of-type(10)
					.company-image
						background-image url(../img/11.png)
			.col-s6
				display -webkit-flex
				display flex 
				flex-flow row wrap
				justify-content center
				align-items center
				width 50%
				padding 20px
				border-bottom 1px solid lead_edge
				&:nth-child(odd)
					border-right 1px solid lead_edge
				.company-image
					width 110px
					height 50px
					background-size contain 
					background-position center
					background-repeat no-repeat
					filter grayscale(100%)
						
@media screen and (min-width: 600px)
	.crealab-container
		.us-container
			.us-content
				video
					width auto
		.allied-companies
			.business-listing
				border-right 0px
				.col-m4
					width 33.3%
					&:nth-of-type(2), &:nth-of-type(4), &:nth-of-type(6), &:nth-of-type(8)
						border-right 1px solid lead_edge
					&:nth-last-child(1)
						display none
@media screen and (min-width: 900px)
	.header-desktop
		.right 
			.nav-desktop
				ul 
					li
						&:nth-of-type(3)
							a 
								font-family 'HelveticaNeueBold'
								color green
								border-bottom 3px solid green
	.crealab-container
		.us-container
			background-color lead_background
			padding 60px 40px
			margin-bottom 70px
			.us-content
				width 80%
				position relative
				video
					width 100%
					height auto
					margin-top 80px
					margin-bottom 0
				.image-crealab
					position absolute
					left 0
					top 0
				.description
					margin-bottom 0
		.allied-companies
			margin-bottom 50px
			.business-listing
				.col-l2
					width 20%
					&:nth-of-type(2), &:nth-of-type(4), &:nth-of-type(6), &:nth-of-type(8)
						border-right 1px solid lead_edge
					&:nth-last-child(1)
						display flex
						border-right 1px solid lead_edge
